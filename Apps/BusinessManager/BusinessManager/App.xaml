<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BusinessManager"
             x:Class="BusinessManager.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        <Style x:Key="universalButton" TargetType="Button">
            <Setter Property="BackgroundColor" Value="ForestGreen"/>
            <Setter Property="WidthRequest" Value="300"/>
        </Style>
        <Style x:Key="entry" TargetType="Entry">
            <Setter Property="BackgroundColor" Value="AntiqueWhite" />
            <Setter Property="TextColor" Value="Black"/>
            <Setter Property="PlaceholderColor" Value="Black"/>
            <Setter Property="WidthRequest" Value="450"/>
        </Style>
        <Style x:Key="header" TargetType="Label">
            <Setter Property="HorizontalTextAlignment" Value="Center"/>
            <Setter Property="FontSize" Value="Header"/>
        </Style>
    </Application.Resources>
</Application>
