<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BusinessManager.Views.HomePage">

    <StackLayout Padding="15"
                 Spacing="15">
        <Label Text="Hello, this is the Home Page :)"
               Style="{StaticResource header}"/>

        <Button Text="Point Of Sale"
                Style="{StaticResource universalButton}"
                Clicked="OnPointOfSale"/>

        <Button Text="Add Product"
                Style="{StaticResource universalButton}"
                Clicked="OnAddProduct"/>

        <Button Text="Stock"
                Style="{StaticResource universalButton}"
                Clicked="OnStockPage"/>

        <Button Text="Packaging"
                Style="{StaticResource Key=universalButton}"
                Clicked="OnPackaging"/>

        <Button Text="Manage"
                Style="{StaticResource universalButton}"
                Clicked="OnManage"/>

        <Button Text="Personal Expenditure"
                Style="{StaticResource universalButton}"
                Clicked="OnPersonalExpenditure"/>
        <Button Text="Testing"
                Style="{StaticResource universalButton}"
                Clicked="OnTesting"/>

    </StackLayout>
    
</ContentPage>